      "-I/mnt/college/git-repos/gba-game/build",
      "-Wuseless-cast",
      "-Wnon-virtual-dtor",
      "-Woverloaded-virtual",
      "-std=c++23",
      "-fno-rtti",
      "-fno-exceptions",
      "-fno-threadsafe-statics",
      "-fuse-cxa-atexit",
      "-c",
      "-o",
      "main.o",
      "/mnt/college/git-repos/gba-game/src/main.cpp"
